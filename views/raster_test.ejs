    function testDraw(filePath, cb){
      var resolution = 252;
      var speed = 10.9;
      var rate = 1;
      var imageFileName = filePath; //such as "./test/test_files/circles3.png"
      var img = new Image();
      img.crossOrigin = "Anonymous";
      img.onload = function() {
        var data = ML.drawCanvas(img);
